{
  "groups": [
    {
      "name": "easy-pay",
      "description": "Easy Pay Starter 配置"
    },
    {
      "name": "easy-pay.alipay",
      "description": "支付宝配置"
    },
    {
      "name": "easy-pay.wxpay",
      "description": "微信支付配置"
    }
  ],
  "properties": [
    {
      "name": "easy-pay.alipay.app-id",
      "type": "java.lang.String",
      "description": "支付宝应用ID"
    },
    {
      "name": "easy-pay.alipay.private-key",
      "type": "java.lang.String",
      "description": "商户私钥"
    },
    {
      "name": "easy-pay.alipay.public-key",
      "type": "java.lang.String",
      "description": "支付宝公钥"
    },
    {
      "name": "easy-pay.alipay.notify-url",
      "type": "java.lang.String",
      "description": "异步回调地址"
    },
    {
      "name": "easy-pay.alipay.return-url",
      "type": "java.lang.String",
      "description": "同步回调页面"
    },
    {
      "name": "easy-pay.alipay.gateway-url",
      "type": "java.lang.String",
      "description": "支付宝网关地址",
      "defaultValue": "https://openapi.alipay.com/gateway.do"
    },
    {
      "name": "easy-pay.alipay.sign-type",
      "type": "java.lang.String",
      "description": "签名类型",
      "defaultValue": "RSA2"
    },
    {
      "name": "easy-pay.alipay.charset",
      "type": "java.lang.String",
      "description": "字符编码",
      "defaultValue": "utf-8"
    },
    {
      "name": "easy-pay.wxpay.app-id",
      "type": "java.lang.String",
      "description": "微信公众号/小程序 appId"
    },
    {
      "name": "easy-pay.wxpay.mch-id",
      "type": "java.lang.String",
      "description": "微信支付商户号"
    },
    {
      "name": "easy-pay.wxpay.mch-key",
      "type": "java.lang.String",
      "description": "微��支付 API 密钥"
    },
    {
      "name": "easy-pay.wxpay.trade-type",
      "type": "java.lang.String",
      "description": "交易类型: NATIVE(二维码), JSAPI(公众号), MWEB(H5)",
      "defaultValue": "NATIVE"
    },
    {
      "name": "easy-pay.wxpay.pay-notify-url",
      "type": "java.lang.String",
      "description": "支付结果回调地址"
    },
    {
      "name": "easy-pay.wxpay.refund-notify-url",
      "type": "java.lang.String",
      "description": "退款回调地址"
    },
    {
      "name": "easy-pay.wxpay.cert-path",
      "type": "java.lang.String",
      "description": "退款证书路径"
    }
  ],
  "hints": [
    {
      "name": "easy-pay.alipay.gateway-url",
      "values": [
        {
          "value": "https://openapi.alipay.com/gateway.do",
          "description": "支付宝生产环境网关"
        },
        {
          "value": "https://openapi-sandbox.dl.alipaydev.com/gateway.do",
          "description": "支付宝沙箱环境网关"
        }
      ]
    },
    {
      "name": "easy-pay.alipay.sign-type",
      "values": [
        {
          "value": "RSA2",
          "description": "RSA2 签名 (推荐)"
        },
        {
          "value": "RSA",
          "description": "RSA 签名"
        }
      ]
    },
    {
      "name": "easy-pay.wxpay.trade-type",
      "values": [
        {
          "value": "NATIVE",
          "description": "二维码支付"
        },
        {
          "value": "JSAPI",
          "description": "公众号支付"
        },
        {
          "value": "MWEB",
          "description": "H5 支付"
        }
      ]
    }
  ]
}
